{
  "manifest_version": 2,
  "name": "feature flipping",
  "version": "1.0",

  "description": "enable / disable features",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "offline_enabled": true,
  "browser_action": {
      "default_icon": "img/icon128.png",
      "default_popup": "popup.html"
  },

  "permissions": ["activeTab"]
}
